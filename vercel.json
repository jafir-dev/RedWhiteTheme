{
  "buildCommand": "npm run build",
  "outputDirectory": "dist/public",
  "installCommand": "npm install",
  "functions": {
    "api/*.js": {
      "runtime": "@vercel/node"
    }
  },
  "rewrites": [
    {
      "source": "/api/login",
      "destination": "/api/login.js"
    },
    {
      "source": "/api/logout",
      "destination": "/api/login.js"
    },
    {
      "source": "/api/auth/user",
      "destination": "/api/login.js"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}